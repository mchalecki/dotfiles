exec --no-startup-id nm-applet
exec --no-startup-id parcellite
exec --no-startup-id redshift
# V-sync https://www.reddit.com/r/i3wm/comments/42cy8b/tearing/
exec compton --config ~/.i3/scripts/compton.conf -b
